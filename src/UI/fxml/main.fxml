<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="UI.AppController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox>
        <Text fx:id="waterBank"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="2"  />
        <Text fx:id="waterProd"
              GridPane.columnIndex="0" GridPane.rowIndex="1"
              GridPane.columnSpan="2"  />
        <ImageView fx:id="waterImage"
                   fitHeight="150" fitWidth="150"
                   preserveRatio="true"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"
                   GridPane.columnSpan="2" >
            <image>
                <Image url="/assets/water.jpg" />
            </image>
        </ImageView>
    </VBox>
    <VBox spacing="10" alignment="CENTER_RIGHT"
        GridPane.columnIndex="1" GridPane.rowIndex="0">
        <HBox spacing="10">
            <ImageView fx:id="waterDistillerImage"
                       fitHeight="50" fitWidth="50"
                       preserveRatio="true">
                <image>
                    <Image url="/assets/waterdistiller.jpg" />
                </image>
            </ImageView>
            <VBox>
                <Text text="Water Distiller"/>
                <Text fx:id="wdCost" text="Cost: 0"/>
            </VBox>
            <Text fx:id="wdAmount" text="0" />
        </HBox>
    </VBox>
</GridPane>